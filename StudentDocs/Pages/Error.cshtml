@page "{id:int}"
@model StudentDocs.Pages.EditModel

<h2>Edit Document</h2>

<div class="page-card">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Category</label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Replace file (optional)</label>
            <input type="file" asp-for="NewFile" class="form-control" />
            <div class="form-text">
                Leave empty to keep the current file.
            </div>
        </div>

        <button type="submit" class="btn btn-view me-2">Save</button>
        <a asp-page="/Documents" class="btn btn-secondary">Cancel</a>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="mt-3 text-danger">@Model.ErrorMessage</p>
    }

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p class="mt-3 text-success">@Model.Message</p>
    }
</div>
