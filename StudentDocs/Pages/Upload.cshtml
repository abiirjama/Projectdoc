@page
@model StudentDocs.Pages.UploadModel

<h2>Upload Document</h2>

<form method="post" enctype="multipart/form-data" class="mt-3">

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input asp-for="Category" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Select a file</label>
        <input type="file" asp-for="UploadedFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>

    <a asp-page="/Documents" class="btn btn-secondary ms-2">
        Back to Documents
    </a>

</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="mt-3 text-success">@Model.Message</p>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p class="mt-3 text-danger">@Model.ErrorMessage</p>
}
