@page
@model StudentDocs.Pages.DocumentsModel

<h2>Documents</h2>
 
<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-6">
            <input class="form-control" type="text" name="q" value="@Model.Q"
                   placeholder="Search by file name or category..." />
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-primary w-100" type="submit">Search</button>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-secondary w-100" asp-page="/Documents">Clear</a>
        </div>
    </div>
</form>

<a asp-page="/Upload" class="btn btn-primary mb-3">Upload New Document</a>

@if (Model.Documents.Count == 0)
{
    <p>No documents uploaded yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>File</th>
                <th>Category</th>
                <th>Size</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var doc in Model.Documents)
        {
            <tr>
                <td>
                    <a href="@doc.FilePath" target="_blank">@doc.FileName</a>
                </td>
                <td>@doc.Category</td>
                <td>@(doc.FileSize / 1024) KB</td>
                <td>@doc.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-page="/Edit" asp-route-id="@doc.Id" class="btn btn-view btn-sm me-2">Edit</a>
                    <a asp-page="/Delete" asp-route-id="@doc.Id" class="btn btn-danger btn-sm">Delete</a>

                    
                </td>
            </tr>
        }
        </tbody>
    </table>
}
